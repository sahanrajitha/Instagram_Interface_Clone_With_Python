#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import StoryCreator libs.components.story_creator.StoryCreator
#:import BottomNav libs.components.bottom_nav.BottomNav
  
<HomePage>:
    md_bg_color: get_color_from_hex("#FFFFFF")

    MDBoxLayout:
        orientation: 'vertical'

        #App Bar
        AppBar:

        MDBoxLayout:
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

                        #Stories
                        ScrollView:
                            size_hint_y: None
                            heigth: 110
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                padding: 5
                                spacing: 5

                                #Story Creater
                                StoryCreator:
                                    avatar: root.profile_picture
                                
                                MDBoxLayout:
                                    adaptive_width: True
                                    padding: 5
                                    spacing: 5
                                    id: stories

                        MDSeparator:

        BottomNav:
            avatar: root.profile_picture        


